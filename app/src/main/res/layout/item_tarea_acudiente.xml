<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTarea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono de estado -->
        <ImageView
            android:id="@+id/iconEstado"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clock"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"/>

        <!-- Información de la tarea -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTituloTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Algebra Worksheet"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvMateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matemáticas"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvHoraEntrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrega: 10:00 AM"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nota: 4.5"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>