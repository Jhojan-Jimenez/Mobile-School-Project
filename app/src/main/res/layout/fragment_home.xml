<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hero -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_card_rounded">

            <ImageView
                android:id="@+id/imgHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_main_admin"/>
        </FrameLayout>

        <!-- Resumen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen"
            android:textColor="#111418"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:columnCount="2">

            <!-- Estudiantes -->
            <LinearLayout
                style="@style/GridCard"
                app:layout_columnWeight="1"
                android:layout_margin="6dp">

                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage"
                        android:src="@android:drawable/ic_menu_myplaces"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estudiantes"
                        android:textColor="#111418"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tvCountStudents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#111418"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Docentes -->
            <LinearLayout
                style="@style/GridCard"
                app:layout_columnWeight="1"
                android:layout_margin="6dp">

                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage"
                        android:src="@android:drawable/ic_menu_manage"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Docentes"
                        android:textColor="#111418"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tvCountTeachers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#111418"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Acudientes -->
            <LinearLayout
                style="@style/GridCard"
                app:layout_columnWeight="1"
                android:layout_margin="6dp">

                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage"
                        android:src="@android:drawable/ic_menu_call"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acudientes"
                        android:textColor="#111418"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tvCountGuardians"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#111418"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Cursos -->
            <LinearLayout
                style="@style/GridCard"
                app:layout_columnWeight="1"
                android:layout_margin="6dp">

                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage"
                        android:src="@android:drawable/ic_menu_my_calendar"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cursos"
                        android:textColor="#111418"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tvCountCourses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#111418"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Asignaturas -->
            <LinearLayout
                style="@style/GridCard"
                app:layout_columnWeight="1"
                android:layout_margin="6dp">

                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage"
                        android:src="@android:drawable/ic_menu_agenda"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asignaturas"
                        android:textColor="#111418"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tvCountSubjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#111418"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.gridlayout.widget.GridLayout>

        <!-- Gestión Académica -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión Académica"
            android:textColor="#111418"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridAcademic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:columnCount="2">

            <!-- Gestionar Estudiantes -->
            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_myplaces"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Gestionar Estudiantes"/>
            </LinearLayout>

            <!-- Gestionar Docentes -->
            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_manage"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Gestionar Docentes"/>
            </LinearLayout>

            <!-- Gestionar Acudientes -->
            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_call"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Gestionar Acudientes"/>
            </LinearLayout>

            <!-- Gestionar Cursos -->
            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_my_calendar"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Gestionar Cursos"/>
            </LinearLayout>

            <!-- Gestionar Asignaturas -->
            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_agenda"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Gestionar Asignaturas"/>
            </LinearLayout>
        </androidx.gridlayout.widget.GridLayout>

        <!-- Configuración Académica -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuración Académica"
            android:textColor="#111418"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:columnCount="2">

            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_month"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Periodos Académicos"/>
            </LinearLayout>

            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_sort_by_size"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Escalas de Calificación"/>
            </LinearLayout>

            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_today"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Calendario Académico"/>
            </LinearLayout>
        </androidx.gridlayout.widget.GridLayout>

        <!-- Comunicación y Reportes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comunicación y Reportes"
            android:textColor="#111418"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:columnCount="2">

            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_share"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Publicar Circulares/Avisos"/>
            </LinearLayout>

            <LinearLayout style="@style/GridCard" app:layout_columnWeight="1" android:layout_margin="6dp">
                <FrameLayout style="@style/RowIconContainer">
                    <ImageView style="@style/RowIconImage" android:src="@android:drawable/ic_menu_save"/>
                </FrameLayout>
                <TextView style="@style/RowTitle" android:text="Generar Reportes"/>
            </LinearLayout>
        </androidx.gridlayout.widget.GridLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
