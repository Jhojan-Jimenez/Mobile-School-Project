<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <com.jhojan.school_project.ParentHeader
        android:id="@+id/parentHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/parentHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tareas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:padding="16dp"/>

        <!-- Tabs para filtros -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="#757575"
            app:tabSelectedTextColor="#1976D2"
            app:tabIndicatorColor="#1976D2"
            app:tabIndicatorHeight="3dp"/>

        <!-- Lista de tareas -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollTareas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/layoutTareas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"/>
            </ScrollView>

            <!-- Mensaje cuando no hay tareas -->
            <TextView
                android:id="@+id/tvNoTareas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No hay tareas pendientes"
                android:textSize="16sp"
                android:textColor="#757575"
                android:gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Footer -->
    <com.jhojan.school_project.ParentBottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>