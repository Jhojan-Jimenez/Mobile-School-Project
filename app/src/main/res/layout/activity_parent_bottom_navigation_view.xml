<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigationLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:paddingVertical="12dp">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Tareas -->
    <LinearLayout
        android:id="@+id/navInbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconInbox"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_inbox"
            android:contentDescription="mensajes"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/textInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensajes"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Calendario -->
    <LinearLayout
        android:id="@+id/navCalendario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconCalendario"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_calendar"
            android:contentDescription="Calendario"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/textCalendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendario"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Perfil -->
    <LinearLayout
        android:id="@+id/navPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconPerfil"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Perfil"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/textPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>