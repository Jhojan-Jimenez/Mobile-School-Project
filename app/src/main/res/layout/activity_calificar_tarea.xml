<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <com.jhojan.school_project.TeacherHeader
        android:id="@+id/teacherHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenido con ScrollView -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/teacherHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de InformaciÃ³n de la Tarea -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalles de la Tarea"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp"/>

                    <!-- TÃ­tulo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TÃ­tulo:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ejercicios de fracciones"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estudiante:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvEstudiante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre del estudiante"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp"/>

                    <!-- DescripciÃ³n -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resolver guÃ­a de fracciones."
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp"/>

                    <!-- Fecha de Entrega -->
                    <TextView
                        android:id="@+id/tvFechaEntrega"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de entrega: 20/11/2025 12:00"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Estado -->
                    <TextView
                        android:id="@+id/tvEstadoTarea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“ Tarea Completada"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:padding="8dp"
                        android:background="#E8F5E9"
                        android:layout_marginBottom="12dp"/>

                    <!-- BotÃ³n Abrir Link -->
                    <Button
                        android:id="@+id/btnAbrirLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”— Abrir Enlace de la Tarea"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card de CalificaciÃ³n -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CalificaciÃ³n"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp"/>

                    <!-- Nota actual -->
                    <TextView
                        android:id="@+id/tvNotaActual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/100"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <!-- SeekBar para la nota -->
                    <SeekBar
                        android:id="@+id/seekBarNota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="12sp"
                            android:textColor="#888888"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="12sp"
                            android:textColor="#888888"/>

                    </LinearLayout>

                    <!-- BotÃ³n Guardar Nota -->
                    <Button
                        android:id="@+id/btnGuardarNota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¾ Guardar Nota"
                        android:textSize="16sp"
                        android:padding="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card de Acciones -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acciones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp"/>

                    <!-- BotÃ³n Cambiar Estado -->
                    <Button
                        android:id="@+id/btnMarcarCompletada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marcar como Completada"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textSize="16sp"
                        android:padding="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Footer -->
    <com.jhojan.school_project.TeacherBottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>