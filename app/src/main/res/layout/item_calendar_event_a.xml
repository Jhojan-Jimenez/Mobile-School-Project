<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/ripple_background"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="8dp">

    <!-- Icono del evento -->
    <ImageView
        android:id="@+id/iconEvento"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_calendar"
        android:padding="8dp"
        android:background="@drawable/icon_background_circle"
        app:tint="#1976D2"
        android:layout_gravity="center_vertical"/>

    <!-- Información del evento -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tvTituloEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Holiday"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvTipoEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Event"
            android:textSize="12sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetalleEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Día festivo nacional"
            android:textSize="14sp"
            android:textColor="#757575"/>

    </LinearLayout>

</LinearLayout>