<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="88dp">

        <!-- Selector hijo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spChildSelector"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Hero / Bienvenida -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/imgHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:color/darker_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hola, Ana!"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenida a tu perfil de acudiente. Aquí puedes gestionar la información académica de tus hijos."
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Tareas Pendientes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareas Pendientes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111418"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Promedio de Calificaciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promedio de Calificaciones"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111418"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGrades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Seguimiento Académico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguimiento Académico"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111418"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAcademic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Configuración Académica -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración Académica"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111418"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Botón Cerrar sesión -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Cerrar sesión"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
